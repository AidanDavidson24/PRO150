@{
    ViewData["Title"] = "Training";
}

<div class="flex-row">
    <div class="card-header text-white bg-secondary mb-3" style="text-align:center; border-color: black; border-block-width: 0.2rem">Training</div>
    <div class="card border-dark p-2" style="background-color:darkgray;max-width: 100rem; min-height: 50rem; flex-direction: row">
        <div class="card border-dark p-2" style=" min-width: 20rem; max-width: 30rem; max-height: 35rem; min-height: 20rem; margin-right: 10rem;">
            <div class="card-header text-white bg-success mb-3" style="text-align:center">Easy</div>
            <ul class="list-group list-group-flush" style="margin-top: 2rem">
                <li class="list-group-item">Enemy Stats</li>
                <li class="list-group-item" style="margin-top: 5rem">Pokemon Level</li>
                <li class="list-group-item" style="margin-top: 5rem">Reward List</li>
            </ul>
            <button type="button" value="Back" style="border-color:green; max-width: 5rem; min-width: 5rem; max-height: 5rem; min-height: 5rem; margin-top: 15rem; margin-left: 7rem;"> Fight</button>
        </div>
        <div class="card border-dark p-2" style=" min-width: 20rem; max-width: 30rem; max-height: 35rem; min-height: 20rem; margin-right: 10rem;">
            <div class="card-header text-white bg-warning mb-3" style="text-align:center">Medium</div>
            <ul class="list-group list-group-flush" style="margin-top: 2rem">
                <li class="list-group-item">Enemy Stats</li>
                <li class="list-group-item" style="margin-top: 5rem">Pokemon Level</li>
                <li class="list-group-item" style="margin-top: 5rem">Reward List</li>
            </ul>
            <button type="button" value="Back" style="border-color:yellow; max-width: 5rem; min-width: 5rem; max-height: 5rem; min-height: 5rem; margin-top: 15rem; margin-left: 7rem;"> Fight</button>
        </div>
        <div class="card border-dark p-2" style=" min-width: 20rem; max-width: 30rem; max-height: 35rem; min-height: 20rem; margin-right: 10rem;">
            <div class="card-header text-white bg-danger mb-3" style="text-align:center">Hard</div>
            <ul class="list-group list-group-flush" style="margin-top: 2rem">
                <li class="list-group-item">Enemy Stats</li>
                <li class="list-group-item" style="margin-top: 5rem">Pokemon Level</li>
                <li class="list-group-item" style="margin-top: 5rem">Reward List</li>
            </ul>
            <button type="button" value="Back" style="border-color:red; max-width: 5rem; min-width: 5rem; max-height: 5rem; min-height: 5rem; margin-top: 15rem; margin-left: 7rem;"> Fight</button>
        </div>
    </div>
</div>